header.page-header
  nav.navbar.navbar-expand-lg
    .container
      a.navbar-brand(href="#")
        img.navbar-brand__img(src="assets/img/logo.png", width="61" alt="adidas")
      a.cart.navbar__cart(href="#" title="cart")
        span.cart-icon.cart__icon
        span.cart__badge 1
